{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "chrome",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "debug-start",
      "postDebugTask": "debug-stop",
      "url": "http://localhost:3000",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**",
        "bootstrap"
      ]
    }
  ]
}